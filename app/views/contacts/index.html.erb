<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Contacts</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.phone %></td>
          <td><%= link_to 'Show', contact, :class => "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_contact_path(contact) , :class => "btn btn-secondary"%></td>
          <td><%= link_to 'Destroy', contact, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Contact', new_contact_path , :class => "btn btn-primary" %>

</div>